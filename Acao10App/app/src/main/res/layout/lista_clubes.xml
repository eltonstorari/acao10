<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_ListaClube_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/sem_foto"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/txt_ListaClube_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textStyle="bold"
                    android:text="x"
                    android:visibility="visible"
                    android:layout_marginEnd="5dp"

                    />

                <TextView
                    android:id="@+id/txt_ListaClube_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textStyle="bold"
                    android:text="Nome do Clube"

                    />
            </LinearLayout>



            <TextView
                android:id="@+id/txt_ListaClube_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nome do Email"

                />


            <TextView
                android:id="@+id/txt_ListaClube_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="WhatsApp"
                android:layout_marginBottom="15dp"
                />


        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"/>



</LinearLayout>